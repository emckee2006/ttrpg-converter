{
    "description":  "Extracted custom_spell definition",
    "type":  "object",
    "$id":  "https://ttrpg-converter.com/schemas/crates/ttrpg-core/schemas/pathbuilder/custom-spell.json",
    "$schema":  "https://json-schema.org/draft-07/schema#",
    "properties":  {
                       "databaseID":  {
                                          "type":  "integer",
                                          "description":  "Database identifier"
                                      },
                       "timestamp":  {
                                         "type":  "string",
                                         "pattern":  "^\\d+$",
                                         "description":  "Creation timestamp"
                                     },
                       "id":  {
                                  "type":  "string",
                                  "pattern":  "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
                                  "description":  "Unique spell ID (UUID)"
                              },
                       "name":  {
                                    "type":  "string",
                                    "minLength":  1,
                                    "description":  "Spell name"
                                },
                       "level":  {
                                     "type":  "integer",
                                     "minimum":  0,
                                     "maximum":  10,
                                     "description":  "Spell level (0=cantrip)"
                                 },
                       "traits":  {
                                      "type":  "string",
                                      "description":  "Spell traits (comma-separated)"
                                  },
                       "traditions":  {
                                          "type":  "array",
                                          "items":  {
                                                        "type":  "string",
                                                        "enum":  [
                                                                     "Arcane",
                                                                     "Divine",
                                                                     "Occult",
                                                                     "Primal"
                                                                 ]
                                                    },
                                          "description":  "Magical traditions"
                                      },
                       "cast":  {
                                    "type":  "string",
                                    "description":  "Casting time and actions"
                                },
                       "components":  {
                                          "type":  "string",
                                          "description":  "Spell components (somatic, verbal, material)"
                                      },
                       "range":  {
                                     "type":  "string",
                                     "description":  "Spell range"
                                 },
                       "area":  {
                                    "type":  "string",
                                    "description":  "Area of effect"
                                },
                       "targets":  {
                                       "type":  "string",
                                       "description":  "Valid targets"
                                   },
                       "duration":  {
                                        "type":  "string",
                                        "description":  "Spell duration"
                                    },
                       "savingThrow":  {
                                           "type":  "string",
                                           "description":  "Required saving throw"
                                       },
                       "description":  {
                                           "type":  "string",
                                           "minLength":  1,
                                           "description":  "Spell description and effects"
                                       },
                       "heightened":  {
                                          "type":  "string",
                                          "description":  "Heightened spell effects"
                                      },
                       "src":  {
                                   "type":  "string",
                                   "description":  "Source book/pack"
                               }
                   },
    "title":  "Custom Spell",
    "required":  [
                     "databaseID",
                     "timestamp",
                     "id",
                     "name",
                     "level",
                     "traits",
                     "description",
                     "src"
                 ]
}
